<%-include ../include/header.ejs%>
<h3>发表文章</h3>
<form action="/article/add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="text" class="form-control" id="topic" name="topic" placeholder="请输入标题" value="">
    </div>
    <div class="form-group">
        <textarea class="form-control" rows="5" id="content" name="content" placeholder="请输入内容"></textarea>
    </div>
    <div class="form-group">
        上传图片
        <input type="file" name="picture"/>
    </div>
    <button type="submit" class="btn btn-block btn-success">发表</button>
</form>

<%-include ../include/footer.ejs%>