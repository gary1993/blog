<%-include ../include/header.ejs%>
<h3>更新文章</h3>
<form action="/article/update?_id=<%=article._id%>" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="text" class="form-control" id="topic" name="topic" placeholder="请输入标题" value= <%=article.topic%>>
    </div>
    <div class="form-group">
        <textarea class="form-control" rows="5" id="content" name="content" placeholder="请输入内容">
            <%=article.content%>
        </textarea>
    </div>
    <div class="form-group">
        更新图片
        <img class="update-pic" src= <%=article.picture%>>
        <input type="file" name="picture"/>
    </div>
    <button type="submit" class="btn btn-block btn-warning">更新</button>
</form>

<%-include ../include/footer.ejs%>